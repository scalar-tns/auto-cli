{
  "Title": "AUTOCLI : automation for CLI applications interface creation",
  "Description": "[autocli] aims to automate .NET 6.0.* CLI applications development based on an input architecture stored in a .json file.\nThe configuration file stores the architecture for the project's Commands, subCommands, options, arguments and properties.",
  "Outfolder": "~/autocli",
  "cli": "dotnet new console -f net6.0 -n autocli -o .",
  "Repo": "auto-CLI",
  "Packages": [
    {
      "Name": "System.CommandLine",
      "Version": "--prerelease"
    },
    {
      "Name": "System.CommandLine.Hosting",
      "Version": "--prerelease"
    },
    {
      "Name": "Serilog",
      "Version": "--prerelease"
    },
    {
      "Name": "Serilog.Sinks.Console",
      "Version": "--prerelease"
    },
    {
      "Name": "Serilog.Sinks.File",
      "Version": "--prerelease"
    }
  ],
  "Commands": [
    {
      "Symbol": "create",
      "Parent": "RootCommand",
      "Method": "creation",
      "Verbosity": "false",
      "Description": "Creates a template of a new .json configuration file with specified name."
    },
    {
      "Symbol": "generate",
      "Parent": "RootCommand",
      "Method": "generation",
      "Verbosity": "true",
      "Description": "Generate the CLI project based on the input .json configuration file."
    }
  ],
  "Arguments": [
    {
      "Symbol": "<name>",
      "Type": "string",
      "Command": "creation",
      "Method": "file_name",
      "Defaultvalue": "null",
      "Description": "Name of .json configuration file."
    },
    {
      "Symbol": "<file>",
      "Type": "FileInfo",
      "Command": "generation",
      "Method": "file",
      "Defaultvalue": "null",
      "Description": ".json configuration file."
    }
  ],
  "Options": [
    {
      "Symbols": [
        "--directory",
        "-d"
      ],
      "Type": "DirectoryInfo",
      "Command": "creation",
      "Required": "true",
      "Method": "dir_choice",
      "Defaultvalue": "null",
      "Description": "Specify the directory output."
    },
    {
      "Symbols": [
        "--push",
        "-p"
      ],
      "Type": "string",
      "Command": "generation",
      "Required": "false",
      "Method": "pushing",
      "Defaultvalue": "n",
      "Description": "Push to GitHub with repo-name ? (y/n)"
    }
  ]
}